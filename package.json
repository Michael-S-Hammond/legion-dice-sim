{
  "name": "legion-dice-sim",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/applicationinsights-web": "^2.7.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "highcharts": "^9.3.0",
    "highcharts-react-official": "^3.0.0",
    "jest": "26.6.0",
    "jquery": "^3.6.0",
    "mathjs": "^9.5.1",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.8.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --maxWorkers=3 --colors --coverage --watchAll=false",
    "test-us": "react-scripts test -u --maxWorkers=3 --colors --coverage --watchAll=false",
    "testWatch": "react-scripts test",
    "scss": "node-sass --watch src/scss -o src/css",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "lint-all": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint-fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "cloc": "cloc ./src --include-lang='TypeScript,Sass,JSON'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/bootstrap": "^5.1.6",
    "@types/enzyme": "^3.10.10",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.0.1",
    "@types/jquery": "^3.5.8",
    "@types/mathjs": "^9.4.2",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.4"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/**/test/**"
    ]
  }
}
